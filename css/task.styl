$survey-task-pill-button
  border: 1px solid rgba(gray, 0.5)
  border-radius: 3px
  padding: 0 0.4em

.survey-identification-proxy
  background: goldenrod
  border-radius: 3px
  color: white
  display: inline-block
  font-size: 10px
  font-weight: bold
  padding: 0 0.5em

.survey-identification-remove
  @extends $reset-button
  border-radius: 50%
  box-shadow:
    0.5px 1px 0 rgba(black, 0.3) inset,
    0.5px 1px 0 rgba(white, 0.5)
  height: 1em
  line-height: 1
  width: 1em

.survey-task-chooser
  font-size: 12px

.survey-task-chooser-characteristics
  display: flex

  > *
    flex-grow: 1
    margin: 0 2px 2px 0

.survey-task-chooser-characteristic
  display: block

.survey-task-chooser-characteristic-value
  @extends $reset-button
  margin: 0 0.6em

.survey-task-chooser-characteristic-value-icon
  border-radius: 3px
  display: block
  margin: 0 auto
  max-height: 3em

.survey-task-chooser-choices
  background: rgba(24, 24, 24, 1)
  border-radius: 3px
  display: flex
  flex-wrap: wrap
  padding: 4px

  > *
    flex-grow: 0
    margin: 0 2px 2px 0

  &[data-breakpoint="Infinity"] > *,
  &[data-breakpoint="40"] > *
    flex-basis: calc(33.33% - 2px)

  &[data-breakpoint="20"] > *,
  &[data-breakpoint="10"] > *
    flex-basis: calc(50% - 2px)

  &[data-breakpoint="5"] > *
    flex-basis: calc(100% - 2px)

.survey-task-chooser-choice
  @extends $reset-button
  background: rgba(64, 64, 64, 1)
  color: white
  display: flex
  justify-content: center

  &:hover
    background: rgba(102, 102, 102, 1)

  > *
    margin: 0.3em 0.6em

.survey-task-chooser-choice-thumbnail
  border-radius: 3px
  display: inline-block
  vertical-align: middle

  [data-breakpoint="Infinity"] &,
  [data-breakpoint="40"] &
    display: none

  [data-breakpoint="20"] &
    height: 2em

  [data-breakpoint="10"] &
    height: 4em

  [data-breakpoint="5"] &
    height: 8em

.survey-task-chooser-choice-label
  display: inline-block

  [data-breakpoint="5"] &
    font-size: 1.5em

.survey-task-chooser-characteristic-clear-button
  @extends $reset-button

.survey-task-image-flipper
  display: block
  position: relative

.survey-task-image-flipper-image
  border-radius: 5px
  display: block
  width: 100%

.survey-task-image-flipper-pips
  bottom: 0
  left: 50%
  line-height: 1
  position: absolute
  transform: translateX(-50%)

.survey-task-image-flipper-pip
  @extends $reset-button
  background: black
  border: 2px solid
  border-radius: 50%
  color: white
  height: 1em
  overflow: hidden
  text-indent: 1em
  width: 1em

.survey-task-choice
  background white
  border-radius: 5px
  color: black
  font-size: 14px
  padding: 1em

.survey-task-choice-label
  font-weight: bold
  margin: 0.5em 0

.survey-task-choice-description
  margin: 0.5em 0

.survey-task-choice-confusions
  margin: 0.5em 0

.survey-task-choice-confusion
  @extends $survey-task-pill-button

.survey-task-choice-question
  margin: 0.5em 0

  &:first-child
    display: block

.survey-task-choice-question-label
  margin: 0 0 3px 0

.survey-task-choice-answer
  background: rgba(232, 232, 232, 1)
  border-radius: 3px
  cursor: pointer
  margin: 0 3px 0 0
  padding: 0.2em 0.5em

  &:hover
    background: rgba(208, 208, 208, 1)
    color: rgba(107, 107, 107, 1)

  &[data-checked]
    background: rgba(76, 170, 129, 1)
    color: white

  span
    cursor: pointer

  > input
    display: none

hr
  display: none

.task-buttons-container
  display: flex
  font-size: 14px
  justify-content: space-between

  > *
    @extends $reset-button
    background: rgba(88, 172, 130, 1)
    border-radius: 4px
    color: white
    font-weight: 700
    padding: 0.8em 0
    text-align: center
    width: 48%

    &.cancel
      background: rgba(64, 64, 64, 1)

    &.identify
      background: rgba(76, 170, 129, 1)
