// colors
$light-blue = #d3dbe2
$medium-blue = #92a2b3
$dark-blue = #3a4959
$lime-green = #c5c64e
$task-gray = #f1f3f5

html, body
  font: 400 15px/1.5 "Open Sans", Arial, sans-serif
  margin: 0
  min-height: 100vh

body
  background: #2c2c2c

$reset-button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  display: inline-block
  font: inherit
  line-height: inherit
  margin: 0
  outline: none
  padding: 0
  position: relative
  text-decoration: none

  &:disabled
    cursor: inherit
    opacity: 0.3

$reset-link
  color: inherit
  text-decoration: none

  &:visited, &:active
    color: inherit

h1, h2, h3, h4, h5, h6, p
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased

.secret-button
  @extends $reset-button
